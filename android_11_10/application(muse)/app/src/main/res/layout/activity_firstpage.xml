<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:background="#F2F2F2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <Button
                android:id="@+id/addsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="40dp"
                android:textColor="#FF80A2"
                android:fontFamily="@font/bmhanna_otf"
                android:layout_gravity="end"
                android:background="#F2F2F2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <az.plainpie.PieView
                        android:id="@+id/pieViewMajor"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginTop="20dp"
                        plainpie:inner_pie_padding="30"
                        plainpie:inner_text_visibility="true"
                        plainpie:percentage_size="30" />

                    <TextView
                        android:id="@+id/creditText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:fontFamily="@font/bmhanna_otf"
                        android:text="전공학점" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <az.plainpie.PieView
                        android:id="@+id/pieViewNonMajor"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginTop="20dp"
                        plainpie:inner_pie_padding="30"
                        plainpie:inner_text_visibility="true"
                        plainpie:percentage_size="30" />

                    <TextView
                        android:id="@+id/creditText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:fontFamily="@font/bmhanna_otf"
                        android:text="교양학점" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="토익점수"
                android:textSize="20dp"
                android:gravity="center"
                android:fontFamily="@font/bmhanna_otf"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toeicscore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/C2"
                    android:text="0"
                    android:textSize="20dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/bmhanna_otf"/>

                <TextView
                    android:id="@+id/requiredscore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/C2"
                    android:text="/졸업요건 점수"
                    android:textSize="20dp"
                    android:fontFamily="@font/bmhanna_otf"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/firstgrd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bmhanna_otf"
                            android:background="#F2F2F2"
                            android:text="1st" />

                        <Button
                            android:id="@+id/secondgrd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bmhanna_otf"
                            android:background="#F2F2F2"
                            android:text="2nd" />

                        <Button
                            android:id="@+id/thirdgrd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bmhanna_otf"
                            android:background="#F2F2F2"
                            android:text="3rd" />

                        <Button
                            android:id="@+id/fourthgrd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bmhanna_otf"
                            android:background="#F2F2F2"
                            android:text="4th+" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/semesterinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

</RelativeLayout>
