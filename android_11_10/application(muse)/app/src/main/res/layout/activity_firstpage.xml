<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <Button
                android:id="@+id/addsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="40dp"
                android:textColor="#FF80A2"
                android:fontFamily="@font/bmhanna_otf"
                android:layout_gravity="end"
                android:background="#F2F2F2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <az.plainpie.PieView
                        android:id="@+id/pieViewMajor"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginTop="20dp"
                        plainpie:inner_pie_padding="30"
                        plainpie:inner_text_visibility="true"
                        plainpie:percentage_size="30" />

                    <TextView
                        android:id="@+id/creditText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:fontFamily="@font/bmhanna_otf"
                        android:text="전공학점" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <az.plainpie.PieView
                        android:id="@+id/pieViewNonMajor"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginTop="20dp"
                        plainpie:inner_pie_padding="30"
                        plainpie:inner_text_visibility="true"
                        plainpie:percentage_size="30"
                        />

                    <TextView
                        android:id="@+id/creditText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="교양학점"
                        android:fontFamily="@font/bmhanna_otf"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/firstgrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st"
                    android:fontFamily="@font/bmhanna_otf"/>

                <Button
                    android:id="@+id/secondgrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2nd"
                    android:fontFamily="@font/bmhanna_otf"/>

                <Button
                    android:id="@+id/thirdgrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3rd"
                    android:fontFamily="@font/bmhanna_otf"/>

                <Button
                    android:id="@+id/fourthgrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4th+"
                    android:fontFamily="@font/bmhanna_otf"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/semesterinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bmhanna_otf"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
