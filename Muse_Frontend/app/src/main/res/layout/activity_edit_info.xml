<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditInfoActivity"
    android:background="#F2F2F2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF80A2"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp">

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/editfinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bmhanna_otf"
            android:layout_gravity="end"
            android:background="@drawable/button_custom"/> />

        <Button
            android:id="@+id/editmajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전공 수정하기"
            android:fontFamily="@font/bmhanna_otf"/>

        <Button
            android:id="@+id/editnonmajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="교양 수정하기"
            android:fontFamily="@font/bmhanna_otf"/>
    </LinearLayout>


</LinearLayout>